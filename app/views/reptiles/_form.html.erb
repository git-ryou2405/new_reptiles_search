<div class="row justify-content-center">
  <div class="col-11">
    <h2>生体登録</h2>
    <%= form_with(model: @reptile, url: yield(:routes_url), local: true) do |f| %>
      <% if @reptile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(reptile.errors.count, "error") %> prohibited this reptile from being saved:</h2>
          <ul>
            <% @reptile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <!-- images -->
      <% if @reptile.images.present? %>
        <% @reptile.images.each do |image| %>
          <% Rails.application.config.another_logger.debug "[d] view: reptiles #{image.inspect}" %>
        <%= image_tag image.url, :width => "100", id: "margin5px" %>
        <!--<%= f.check_box :remove_image %><%= "画像を削除" %>-->
        <% end %>
        <br>
        <%= link_to "画像を削除", "#", class:"btn btn-md btn-primary",data: { confirm: "ショップ画像を削除します。\nよろしければOKを押してください。" } %><br>
      <% else %>
        <%= f.label :images, class: "mt-2" %><br>
        <%= f.file_field :images, multiple: true, id: :reptile_images %><br>
      <% end %>
      <!-- ここまでimages -->
      
      <!--
      <% arrey = [
        [:type1,:reptile_type1],
        [:type2,:reptile_type2],
        [:sex,:reptile_sex],
        [:age,:reptile_age],
        [:size,:reptile_size],
        [:weight,:reptile_weight],
        [:description,:reptile_description]
        ] %>
      -->
      
      <%= f.label :type1, class: "mt-2" %>
      <%= f.select :type1, [ ['ヘビ', 'ヘビ'], ['カメ', 'カメ'], ['トカゲ', 'トカゲ'], ['ヤモリ', 'ヤモリ'], ['両生類', '両生類'], ['奇虫・その他', '奇虫・その他'] ], { include_blank: true }, { id: :reptile_type1, class: "form-control custom-select" } %>
      
      <%= f.label :type2, class: "mt-2" %>
      <%= f.text_field :type2, id: :reptile_type2, class: "form-control" %>
      
      <%= f.label :type_name, class: "mt-2" %>
      <%= f.text_field :type_name, id: :reptile_type_name, class: "form-control" %>
      
      <%= f.label :morph, class: "mt-2" %>
      <%= f.text_field :morph, id: :reptile_morph, class: "form-control" %>
      
      <%= f.label :sex, class: "mt-2" %>
      <%= f.select :sex, [['オス', 'オス'], ['メス', 'メス'], ['不明', '不明'] ], { include_blank: true }, { id: :reptile_type1, class: "form-control custom-select" } %>

      <%= f.label :age, class: "mt-2" %>
      <%= f.text_field :age, id: :reptile_age, class: "form-control" %>

      <%= f.label :size, class: "mt-2" %>
      <%= f.text_field :size, id: :reptile_size, class: "form-control" %>
      
      <%= f.label :weight, class: "mt-2" %>
      <%= f.text_field :weight, id: :reptile_weight, class: "form-control" %>
      
      <%= f.label :description, class: "mt-2" %>
      <%= f.text_area :description, id: :reptile_description, size: "3x3", class: "form-control" %>
      
      <%= f.label :price, class: "mt-2" %>
      <%= f.number_field :price, id: :reptile_price, class: "form-control" %>
      
      <%= f.label :sales_status, class: "mt-2" %>
      <%= f.text_field :sales_status, id: :reptile_sales_status, class: "form-control" %>
      
      <%= f.label :arrival_day, class: "mt-2" %>
      <%= f.date_field :arrival_day, id: :reptile_arrival_day, class: "form-control" %>
      
      <div class="actions">
        <%= f.submit yield(:button_text), class: "btn btn-primary w-100 my-3",data: { confirm: "生体を新規登録します。\nこの内容でよろしければOKを押してください。" } %>
      </div>
    <% end %>
  </div>
</div>

<br>
<%= link_to "◀︎ マイページへ戻る", user_path(current_user), style:"font-size: 13px; color: silver;", onMouseOver:"this.style.textDecoration='none'; this.style.color='#ffffff';" %>
